.ui.dict-entry(*ngIf='entry')
  .ui.header.entry-header
    .ui.right.floated.sub.header
      .ui.mini.button((click)='false') 编辑
    .entry-word {{entry.word}}
    .categories
      .cat-labels([hidden]='editCategories')
        label.ui.mini.label(*ngIf='cats.cet4') CET 4
        label.ui.mini.label(*ngIf='cats.cet6') CET 6
        label.ui.mini.label(*ngIf='cats.gre') GRE
        label.ui.mini.label(*ngIf='cats.yasi') 雅思
        label.ui.mini.label(*ngIf='cats.pro4') 专四
        label.ui.mini.label(*ngIf='cats.pro8') 专八
        ng-template([ngIf]='cats.haici')
          label.ui.mini.label 海词 {{cats.haici}}星

  .clearing
  .simple-explain-row
    .simple-explain
      | {{entry.explain}}

  .ui.clearing.divider
  .pos-meanings(*ngFor='let posMeanings of entry.complete; first as firstPos; last as lastPos')
    .pos-header
      | {{posMeanings.pos}}
    .clearing
    .ui.ordered.selection.divided.list.meaning-items
      .ui.item(*ngFor='let item of posMeanings.items; first as firstItem; last as lastItem')
        .meaning-item([ngClass]='{selected: selectedItemId===item.id}', (click)='clickMeaningItem(posMeanings,item)')
          span.ui.mini.label(*ngFor='let tag of item.tags') {{tagLabelMap[tag]}}
          span.item-explain {{item.explain}}

  .ui.clearing.divider
  .ui.fields
    .ui.right.floated.tiny.buttons
      button.ui.mini.button((click)='cancel()') 取消
      .or
      button.ui.mini.primary.button([ngClass]='{disabled: !selectedItemChanged}', (click)='done()') 确定
    .optip 选择义项
