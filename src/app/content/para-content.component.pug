.para-text.content-text(#paraText='', (mouseup)='onMouseup()', (keyup)='onKeyup()', [attr.contenteditable]='editable', spellcheck='false')
.para-text.trans-text([hidden]='!showTrans', #paraTrans='', (keyup)='onTransKeyup()', [attr.contenteditable]='editable', spellcheck='false')
.ui.right.rail(*ngIf='beenChanged')
  .ui.list([hidden]='!gotFocus')
    .ui.item
      button.ui.mini.primary.basic.button((click)='notifySave()', [ngClass]='{disabled: !contentChanged&&!transChanged}')
        i.checkmark.icon
        | 保存
    .ui.item
      button.ui.mini.primary.basic.button((click)='discard()', [ngClass]='{disabled: !contentChanged&&!transChanged}')
        i.undo.icon
        | 撤销
